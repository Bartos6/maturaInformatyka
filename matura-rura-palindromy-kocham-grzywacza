#include <iostream>
#include <fstream>
using namespace std;

int n = 12;
bool czyPalindrom(string napis) {
	for (int i = 0; i < n / 2; i++) {
		if(napis[i] != napis[n - i - 1]){
			return false;
		}
	}
	return true;
}
int main() {
	string napis;
	ifstream dane("symbole_przyklad.txt");
	ofstream wynik("wynik2_1.txt");
	int i = 1;
	while (dane >> napis) {
		if (czyPalindrom(napis)) {
			wynik << napis << endl;
		}
		i++;
	}
	//czyPalindrom(napis) ? cout << "Palindrom" : cout << "Nie palindrom";
}
