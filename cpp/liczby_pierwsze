#include<iostream>
using namespace std;

// w poniższym programie przedstawiono 3 funkjce
// czy_pierwsza - najbardziej optymalna
// czy_pierwsza2 - optymalna
// czy_pierwsza3 - ujdzie

bool czy_pierwsza(int n)
{
	if(n < 2) return false;
		
	for(int i = 2; i * i <= n; i++){
	    if(n % i == 0) return false;
	}

	return true;
}

bool czy_pierwsza2(int n){
	if(n < 2) return false;
	
	int l = 0;	
	for(int i = 2; i * i <= n; i++){
		if(n % i == 0) l++;
	}
	
	if(l == 0) return true;
	else return false;
}

bool czy_pierwsza3(int n){
	if(n < 2) return false;
	
	int l = 0;	
	for(int i = 1; i <= n; i++){
		if(n % i == 0) l++;
	}
	
	if(l == 2) return true;
	else return false;
}

int main()
{
	int n;
	
	cout<<"Podaj liczbę: ";
	cin>>n;
	
	cout<<"\n\nAlgorytm 1 czy_pierwsza()\n";
	if(czy_pierwsza(n))	cout << "Liczba " << n << " jest pierwsza";
	else cout << "Liczba " <<n<< " NIE jest pierwsza";
	
	
	cout<<"\n\nAlgorytm 2 czy_pierwsza()\n";
	if(czy_pierwsza2(n))	cout << "Liczba " << n << " jest pierwsza";
	else cout << "Liczba " <<n<< " NIE jest pierwsza";
	
	
	cout<<"\n\nAlgorytm 3 czy_pierwsza()\n";
	if(czy_pierwsza3(n))	cout << "Liczba " << n << " jest pierwsza";
	else cout << "Liczba " <<n<< " NIE jest pierwsza";
	
	return 0;
}
